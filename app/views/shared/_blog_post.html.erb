<div class="card large-card">
    <div class="card-header">
        <h3><b><%= article.title %></b></h3>
        <h5><span class="w3-opacity"><%= article.created_at %></span></h5>
    </div>

    <div class="blog-post">
        <p>
            <% if summary %>
                <%= simple_format article.body&.split("\n").first, {}, sanitize: false%>
            <% else %>
                <%= simple_format article.body, {}, sanitize: false%>
            <% end %>
        </p>
        <div>
            <div>
                <% if summary %>
                    <%= link_to article_path(article) do%>
                        <button class="custom-button">
                            READ MORE
                        </button>
                    <%end%>
                <% else %>
                    <%= link_to :back do%>
                        <button class="custom-button">
                            GO BACK
                        </button>
                    <%end%>
                <% end %>
            </div>
        </div>
    </div>
</div>